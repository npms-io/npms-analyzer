{
    // ------------------------------------------------------------------------------
    // Index settings
    // ------------------------------------------------------------------------------
    "settings" : {
        "number_of_shards" : 1,
        "number_of_replicas": 0,

        "analysis": {
            // Custom filters
            "filter": {
                // Split word filter, which takes tokens, such as es6_promise or lodash.foreach, and splits them
                // into several other tokens
                "split_word": {
                    "type": "word_delimiter",
                    "generate_word_parts": true,
                    "generate_number_parts": true,
                    "catenate_words": false,
                    "catenate_numbers": false,
                    "catenate_all": false,
                    "split_on_case_change": true,
                    "preserve_original": true,
                    "split_on_numerics": true,
                    "stem_english_possessive": true
                },

                // Edge gram to enable auto-complete and to provide fallback to stemming
                "edge_ngram": {
                    "type": "edgeNGram",
                    "min_gram": "3",
                    "max_gram": "15"
                },
            },

            // Custom analyzers
            // The identifier_* series produces good results for the `name` and `keywords` fields
            "analyzer": {
                "identifier": {
                    "tokenizer": "standard",
                    "filter": [
                        "split_word",
                        "lowercase"
                    ],
                },

                "identifier_english": {
                    "tokenizer": "standard",
                    "filter": [
                        "split_word",
                        "lowercase",
                        "kstem"  // Non-aggressive english stemmer, while preserving original keywords
                    ]
                },

                "identifier_english_aggressive": {
                    "tokenizer": "standard",
                    "filter": [
                        "split_word",
                        "lowercase",
                        "porter_stem"  // Aggressive english stemmer
                    ]
                },

                // This analyzer provides fallbacks in which the stemmer is not efficient, e.g.: search for "glob" should match "globby"
                "identifier_edge_ngram": {
                    "tokenizer": "standard",
                    "filter": [
                        "split_word",
                        "lowercase",
                        "edge_ngram"
                    ]
                }
            }
        }
    },

    // ------------------------------------------------------------------------------
    // Mappings
    // ------------------------------------------------------------------------------
    "mappings" : {
        "module" : {
            "dynamic": "strict",
            "_all": {
                "enabled": false
            },

            "properties" : {
                // The `name`, `description` and `keywords` fields all have `norms` disabled because we don't care about the fields length
                // Also they have additional fields beyond the `standard` analyzer, which is `not_analyzed`, `identifier` and `english`
                "name": {
                    "type": "string",
                    "fields": {
                        "identifier_english_docs": {
                            "type": "string",
                            "analyzer": "identifier_english",
                            "index_options": "docs"
                        },
                        "identifier_english_aggressive_docs": {
                            "type": "string",
                            "analyzer": "identifier_english_aggressive",
                            "index_options": "docs"
                        },
                        "identifier_edge_ngram": {
                            "type": "string",
                            "analyzer": "identifier_edge_ngram"
                        },
                        "not_analyzed": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "description": {
                    "type": "string",
                    "fields": {
                        "identifier_english_docs": {
                            "type": "string",
                            "analyzer": "identifier_english",
                            "index_options": "docs"
                        },
                        "identifier_english_aggressive_docs": {
                            "type": "string",
                            "analyzer": "identifier_english_aggressive",
                            "index_options": "docs"
                        },
                        "identifier_edge_ngram": {
                            "type": "string",
                            "analyzer": "identifier_edge_ngram"
                        },
                        "identifier_edge_ngram": {
                            "type": "string",
                            "analyzer": "identifier_edge_ngram"
                        },
                        "not_analyzed": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "keywords": {
                    "type": "string",
                    "fields": {
                        "identifier_english_docs": {
                            "type": "string",
                            "analyzer": "identifier_english",
                            "index_options": "docs"
                        },
                        "identifier_english_aggressive_docs": {
                            "type": "string",
                            "analyzer": "identifier_english_aggressive",
                            "index_options": "docs"
                        },
                        "identifier_edge_ngram": {
                            "type": "string",
                            "analyzer": "identifier_edge_ngram"
                        },
                        "identifier_edge_ngram": {
                            "type": "string",
                            "analyzer": "identifier_edge_ngram"
                        },
                        "not_analyzed": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "version": {
                    "type": "string",
                    "index": "no"
                },
                "publisher": {
                    "type": "object",
                    "properties": {
                        "username": {
                            "type": "string",
                            "norms": { "enabled": false },
                            "fields": {
                                "not_analyzed": {
                                    "type": "string",
                                    "index": "not_analyzed"
                                }
                            }
                        },
                        "email": { "type": "string", "index": "no" }
                    }
                },
                "maintainers": {
                    "type": "object",
                    "properties": {
                        "username": {
                            "type": "string",
                            "norms": { "enabled": false },
                            "fields": {
                                "not_analyzed": {
                                    "type": "string",
                                    "index": "not_analyzed"
                                }
                            }
                        },
                        "email": { "type": "string", "index": "no" }
                    }
                },
                "evaluation": {
                    "type": "object",
                    "properties": {
                        "quality": {
                            "type": "object",
                            "properties": {
                                "carefulness": { "type": "double" },
                                "tests": { "type": "double" },
                                "dependenciesHealth": { "type": "double" },
                                "branding": { "type": "double" }
                            }
                        },
                        "popularity": {
                            "type": "object",
                            "properties": {
                                "communityInterest": { "type": "double" },
                                "downloadsCount": { "type": "double" },
                                "downloadsAcceleration": { "type": "double" },
                                "dependentsCount": { "type": "double" }
                            }
                        },
                        "maintenance": {
                            "type": "object",
                            "properties": {
                                "recentCommits": { "type": "double" },
                                "commitsFrequency": { "type": "double" },
                                "openIssues": { "type": "double" },
                                "issuesDistribution": { "type": "double" }
                            }
                        }
                    }
                },
                "score": {
                    "type": "object",
                    "properties": {
                        "final": { "type": "double" },
                        "detail": {
                            "type": "object",
                            "properties": {
                                "quality": { "type": "double" },
                                "popularity": { "type": "double" },
                                "maintenance": { "type": "double" }
                            }
                        }
                    }
                }
            }
        }
    }
}